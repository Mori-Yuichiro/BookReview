<div class="text-center">
    <h1>Sign up</h1>
</div>
    
<%= form_with(model: @user, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    
    <div class="form-group row">
        <div class="col-sm-1 offset-sm-3">
            <%= f.label :name, 'Name' %>
        </div>
        <div  class="col-sm-6 offset-sm-2">
            <%= f.text_field :name, class: 'form-controll col-sm-10' %>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-1 offset-sm-3">
            <%= f.label :email, 'Email' %>
        </div>
        <div class="col-sm-6 offset-sm-2">
            <%= f.email_field :email, class: 'form-controll col-sm-10' %>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-1 offset-sm-3">
            <%= f.label :password, 'Password' %>
        </div>
        <div class="col-sm-6 offset-sm-2">
            <%= f.password_field :password, class: 'form-controll col-sm-10' %>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-1 offset-sm-3">
            <%= f.label :password_confirmation, 'Confirmation' %>
        </div>
        <div class="col-sm-6 offset-sm-2">
            <%= f.password_field :password_confirmation, class: 'form-controll col-sm-10' %>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-6 offset-sm-6">
            <%= f.submit 'Sign up', class: 'btn btn-primary btn-block col-sm-10' %>
        </div>
    </div>
<% end %>