<% if current_user.gooding?(book) %>
    <%= form_with(model: current_user.goods.find_by(book_id: book.id), local: true, method: :delete) do |f| %>
        <%= hidden_field_tag :book_id, book.id %>
        <%= f.submit '☆', class: 'btn btn-danger btn-block btn-sm' %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.goods.build, local: true) do |f| %>
            <%= hidden_field_tag :book_id, book.id %>
            <%= f.submit '☆', class: 'btn btn-warning btn-block btn-sm' %>
        <% end %>
<% end %>