<div class="search row">
    <div class="col-sm-4 offset-sm-2">
        <p>タイトル</p>
    </div>
    
    <div class="col-sm-5">
        <%= form_with(model: @book, url: books_search_path, local: true) do |f| %>
            <%= f.text_field :title, class: 'form-controll mb-4' %>
            
            <div>
                <%= f.submit '検索', class: 'btn btn-lg btn-warning ml-5'%>
            </div>
        <% end %>
    </div>
</div>