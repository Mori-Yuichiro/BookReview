<div class="col-sm-8">
    <div class="card text-center">
         <div class="card-header">
            新着順、いいね順、ジャンル
          </div>
          <ul class="list-group list-group-flush">
              <%= books.each do |book| %>
                <li class="list-group-item">
                    <div>
                            
                            <%= link_to book.user.name, user_path(book.user) %>
                            
                                
                            
                    </div>
                    <div>
                        タイトル : <%= book.title %>,
                            著者 : <%= book.author %>,
                        ジャンル : <%= book.kind.name %>
                    </div>
                        
                    <div>
                        レビュー : <%= book.review %>
                        <%= render 'goods/good_button', book: book %>
                    </div>
                </li>
              <% end %>
              <%= paginate books %>
          </ul>
    </div>
</div>

    