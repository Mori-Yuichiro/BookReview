<ul class="list-group list-group-flush">
    <% books.each do |book| %>
        <li class="list-group-item">
            <div class="col-4 offset-4">
                <%= image_tag book.image_url, class: 'img-fluid' %>
            </div>
            
            <div>
                <%= link_to book.user.name, user_path(book.user), class: 'mr-2'  %>
            </div>
    
            <div>
                タイトル : <%= book.title %>
            </div>
                            
            <div>
                著者 : <%= book.author %>
            </div>
                                
            <div>
                ジャンル : <%= book.kind.name %>
            </div>
                            
            <div>
                レビュー : <%= book.review %>
            </div>
                            
            <div class="good_button offset-4">
                <div class="mr-2">    
                    <%= render 'goods/good_button', book: book %>
                </div>
                                
                <div class="mr-2">
                    <% if current_user == book.user %>
                        <%= link_to "削除", book, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
                    <% end %>
                </div>
            </div>
        </li>
     <% end %>
</ul>