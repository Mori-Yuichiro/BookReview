<div class="row">
    <%= render 'layouts/books_side', book_side: @books %>
    
    <div class="col-sm-8">
        <div class="card text-center">
          <div class="card-header">
            Featured
          </div>
          <ul class="list-group list-group-flush">
              <%= books.each do |book| %>
                <li class="list-group-item">
                        <div>
                            <%= current_user.name %>
                        </div>
                        <div>
                        タイトル : <%= book.title %>,
                            著者 : <%= book.author %>
                        </div>
                        レビュー : <%= book.review %>
                </li>
              <% end %>
              <%= paginate books %>
          </ul>
        </div>
    </div>
</div>

    