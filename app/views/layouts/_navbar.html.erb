<header class="font mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-warning">
    <a class="navbar-brand" href="/"><i class="fas fa-book"></i>Bookreview</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if logged_in? %>

          <li class="nav-item dropdown">
              <a class="list btn btn-warning dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                   Link
              </a>
            <ul class="dropdown-menu dropdown-menu-right">
              
              <li class="dropdown-item"><a href="<%= books_good_path(@book) %>">Good</a></li>
              <hr>
              <% @kinds.each do |kind| %>
                <li class="dropdown-item"><a href="/kinds/<%= kind.id %>"><%= kind.name %></a></li>
              <% end %>
            </ul>
          </li>

        

          <li class="nav-item active"><%= link_to 'New Book', search_books_path, class: 'nav-link' %></li>

          

          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle active" data-toggle="dropdown"><%= current_user.name %></a>
            <ul class="dropdown-menu dropdown-menu-right">
              <li class="dropdown-item"><%= link_to 'My page', user_path(current_user) %></li>
              <li class="dropdown-divider"></li>
              <li class="dropdown-item"><%= link_to 'Logout', logout_path, method: :delete %></li>
            </ul>
          </li>

        <% else %>

          <li class="nav-item active"><%= link_to 'Signup', signup_path, class: 'nav-link' %></li>


          <li class="nav-item active"><%= link_to 'Login', login_path, class: 'nav-link' %></li>

        <% end %>
      </ul>
    </div>
  </nav>
</header>