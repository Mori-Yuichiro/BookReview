<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-warning">
    <font face="Comic Sans MS"><a class="navbar-brand" href="/"><i class="fas fa-book"></i>Bookreview</a></font>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if logged_in? %>
          <div class="dropdown">
            <font face="Comic Sans MS">
                 <a class="btn btn-warning dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: white;">
                   Dropdown link
                 </a>
                
                 <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                   <a class="dropdown-item" href="<%= books_newer_path(@book) %>">Recent</a>
                   <a class="dropdown-item" href="<%= books_good_path(@book) %>">Good</a>
                   <hr>
                   <% @kinds.each do |kind| %>
                        <a class="dropdown-item" href="/kinds/<%= kind.id %>"><%= kind.name %></a>
                    <% end %>
                </div>
            </div>
          </font>
        
          <font face="Comic Sans MS">
            <li class="nav-item active"><%= link_to 'New Book', search_books_path, class: 'nav-link' %></li>
          </font>
          <font face="Comic Sans MS">
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= current_user.name %></a>
              <ul class="dropdown-menu dropdown-menu-right">
                <li class="dropdown-item"><%= link_to 'My page', user_path(current_user) %></li>
                <li class="dropdown-divider"></li>
                <li class="dropdown-item"><%= link_to 'Logout', logout_path, method: :delete %></li>
              </ul>
            </li>
          </font>
        <% else %>
          <font face="Comic Sans MS">
            <li class="nav-item active"><%= link_to 'Signup', signup_path, class: 'nav-link' %></li>
          </font>
          <font face="Comic Sans MS">
            <li class="nav-item active"><%= link_to 'Login', login_path, class: 'nav-link' %></li>
          </font>
        <% end %>
      </ul>
    </div>
  </nav>
