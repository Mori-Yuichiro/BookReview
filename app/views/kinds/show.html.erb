<div class="offset-sm-3">
    <div class="col-sm-8">
        <div class="card text-center">
             <div class="card-header">
                <h3 class="text-center"><%= @kind.name %></h3>
              </div>
              <ul class="list-group list-group-flush">
                  <% @books.each do |book| %>
                    <li class="list-group-item">
                        <div style="display: flex;">
                            <div class="col-sm-3" style="margin-right: 95px;">
                                <%= image_tag book.image_url, class: 'img-fluid' %>
                             </div>
                             <div class="mt-4">
                                 <%= link_to book.user.name, user_path(book.user), class: 'mr-3' %>
                                 <%= book.updated_at %>
                             </div>
                        </div>
                        
                        <div style="margin-left: -30px;">
                            タイトル : <%= book.title %>
                        </div>
                            
                        <div style="margin-left: 35px;">
                                著者 : <%= book.author %>
                        </div>
                                
                        <div>
                            ジャンル : <%= book.kind.name %>
                        </div>
                            
                        <div style="margin-left: -30px;">
                            レビュー : <%= book.review %>
                            
                            <div style="margin-left:130px; display: flex;">
                                <div class="mr-2">    
                                    <%= render 'goods/good_button', book: book %>
                                </div>
                                
                                <div class="mr-2">
                                    <% if current_user == book.user %>
                                        <%= link_to "削除", book, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
                                        <%= link_to "編集", book, class: 'btn btn-warning btn-sm' %>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </li>
                  <% end %>
              </ul>
        </div>
    </div>
</div>