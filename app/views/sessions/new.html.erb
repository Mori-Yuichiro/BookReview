<div class="center">
    <h1>Login</h1>
</div>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <div class="form-group row">
        <div class="col-sm-1 offset-sm-3">
            <%= f.label :email, 'Email' %>
        </div>
        <div class="col-sm-6 offset-sm-2">
            <%= f.email_field :email, class: 'form-controll col-sm-10' %>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-1 offset-sm-3">
            <%= f.label :password, 'Password' %>
        </div>
        <div class="col-sm-6 offset-sm-2">
            <%= f.password_field :password, class: 'form-controll col-sm-10' %>
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-sm-6 offset-sm-6">
            <%= f.submit 'Login', class: 'btn btn-primary btn-block col-sm-10' %>
        </div>
    </div>
<% end %>
